<!doctype html>
<html class="x-admin-sm">
<head>
    <meta charset="UTF-8">
    <base href="/">
    <title>商城订单后台管理系统</title>
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport"
          content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8,target-densitydpi=low-dpi"/>
    <meta http-equiv="Cache-Control" content="no-siteapp"/>
    <link rel="stylesheet" href="x-admin/css/font.css">
    <link rel="stylesheet" href="x-admin/css/xadmin.css">
    <link rel="stylesheet" href="x-admin/css/theme2.css">
    <script type="text/javascript" src="x-admin/js/jquery.min.js"></script>
    <script src="x-admin/lib/layui/layui.js" charset="utf-8"></script>
        <script type="text/javascript" src="x-admin/js/xadmin.js"></script>
        <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
        <!--[if lt IE 9]>
          <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
          <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        <script>
            // 是否开启刷新记忆tab功能
            const is_remember = false;
        </script>
    </head>
<body class="index">
<!-- 顶部开始 -->
<div class="container">
    <div class="logo">
        <a href="home">商城订单后台管理系统</a></div>
    <div class="left_open">
        <a><i title="展开左侧栏" class="iconfont">&#xe699;</i></a>
    </div>
    <ul class="layui-nav right" lay-filter="">
        <li class="layui-nav-item">
            <a href="javascript:;"><%= loginInfo.username %></a>
            <dl class="layui-nav-child">
                <!-- 二级菜单 -->
                <dd>
                    <a onclick="xadmin.open('个人信息','userinfo/edit?id=<%= loginInfo.id %>&type=info',500,600)">个人信息</a>
                </dd>
                <dd>
                    <a onclick="xadmin.open('修改密码','userinfo/password',500,500)">修改密码</a></dd>
                <dd>
                    <a href="javascript:;" id="logout">退出</a></dd>
            </dl>
        </li>
    </ul>
</div>
<!-- 顶部结束 -->
<!-- 中部开始 -->
<!-- 左侧菜单开始 -->
<div class="left-nav">
    <div id="side-nav">
        <ul id="nav">
            <% if(loginInfo.power == 1 || loginInfo.power == 2){ %>
                <li>
                    <a href="javascript:;">
                        <i class="iconfont left-nav-li" lay-tips="用户管理">&#xe6b8;</i>
                        <cite>用户管理</cite>
                        <i class="iconfont nav_right">&#xe697;</i></a>
                    <ul class="sub-menu">
                        <% if(loginInfo.power == 1){ %>
                            <li>
                                <a onclick="xadmin.add_tab('后台人员信息','userinfo/list',true)">
                                    <i class="iconfont">&#xe6a7;</i>
                                    <cite>后台人员信息</cite></a>
                            </li>
                            <li>
                                <a onclick="xadmin.add_tab('客户信息','client/list',true)">
                                    <i class="iconfont">&#xe6a7;</i>
                                    <cite>客户信息</cite></a>
                            </li>
                            <% } %>
                            <li>
                                <a onclick="xadmin.add_tab('店铺信息','shop/list',true)">
                                    <i class="iconfont">&#xe6a7;</i>
                                    <cite>店铺信息</cite></a>
                            </li>
                        </ul>
                    </li>
            <% } %>
            <% if(loginInfo.power == 2){ %>
                <li>
                    <a href="javascript:;">
                        <i class="iconfont left-nav-li" lay-tips="商铺管理">&#xe722;</i>
                        <cite>商铺管理</cite>
                        <i class="iconfont nav_right">&#xe697;</i></a>
                    <ul class="sub-menu">
                        <li>
                            <a onclick="xadmin.add_tab('商品信息','item/list',true)">
                                <i class="iconfont">&#xe6a7;</i>
                                <cite>商品信息</cite></a>
                        </li>
                        <li>
                            <a onclick="xadmin.add_tab('订单信息','order/list',true)">
                                <i class="iconfont">&#xe6a7;</i>
                                <cite>订单信息</cite></a>
                        </li>
                    </ul>
                </li>
            <% } %>
            <% if(loginInfo.power != 4){ %>
                <li>
                    <a href="javascript:;">
                        <i class="iconfont left-nav-li" lay-tips="申请信息">&#xe74e;</i>
                        <cite>申请信息</cite>
                        <i class="iconfont nav_right">&#xe697;</i></a>
                    <ul class="sub-menu">
                        <% if(loginInfo.power != 1){ %>
                            <li>
                                <a onclick="xadmin.add_tab('用车申请','',true)">
                                    <i class="iconfont">&#xe6a7;</i>
                                    <cite>用车申请</cite></a>
                            </li>
                        <% } %>
                        <li>
                            <a onclick="xadmin.add_tab('申请记录','',true)">
                                <i class="iconfont">&#xe6a7;</i>
                                <cite>申请记录</cite></a>
                        </li>
                        <% if(loginInfo.power == 1 || loginInfo.power == 2){ %>
                            <li>
                                <a onclick="xadmin.add_tab('用车审批','',true)">
                                    <i class="iconfont">&#xe6a7;</i>
                                    <cite>用车审批</cite></a>
                            </li>
                        <% } %>
                    </ul>
                </li>
            <% } %>
            <% if(loginInfo.power == 4 || loginInfo.power == 1){ %>
                <li>
                    <a href="javascript:;">
                        <i class="iconfont left-nav-li" lay-tips="车辆养护">&#xe70e;</i>
                        <cite>车辆养护</cite>
                        <i class="iconfont nav_right">&#xe697;</i></a>
                    <ul class="sub-menu">
                        <% if(loginInfo.power == 4){ %>
                            <li>
                                <a onclick="xadmin.add_tab('添加信息','',true)">
                                    <i class="iconfont">&#xe6a7;</i>
                                    <cite>添加信息</cite></a>
                            </li>
                        <% } %>
                        <li>
                            <a onclick="xadmin.add_tab('养护记录','',true)">
                                <i class="iconfont">&#xe6a7;</i>
                                <cite>养护记录</cite></a>
                        </li>
                    </ul>
                </li>
                <% } %>
        </ul>
    </div>
</div>
<!-- <div class="x-slide_left"></div> -->
<!-- 左侧菜单结束 -->
<!-- 右侧主体开始 -->
<div class="page-content">
    <div class="layui-tab tab" lay-filter="xbs_tab" lay-allowclose="false">
        <ul class="layui-tab-title">
            <li class="home">
                        <i class="layui-icon">&#xe68e;</i>我的桌面</li></ul>
                <div class="layui-unselect layui-form-select layui-form-selected" id="tab_right">
                    <dl>
                        <dd data-type="this">关闭当前</dd>
                        <dd data-type="other">关闭其它</dd>
                        <dd data-type="all">关闭全部</dd></dl>
                </div>
                <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show">
                        <iframe src='welcome' frameborder="0" scrolling="yes" class="x-iframe"></iframe>
                    </div>
                </div>
                <div id="tab_show"></div>
            </div>
        </div>
<div class="page-content-bg"></div>
<style id="theme_style"></style>
<!-- 右侧主体结束 -->
<!-- 中部结束 -->
</body>
<script>
    layui.use(['layer'], function () {
        const layer = layui.layer
        $("#logout").click(function () {
            layer.confirm("确定退出系统吗?", {icon: 3}, function (index) {
                $.post("logout", () => {
                    location.replace("/")
                })
                layer.close(index);
            })
        })
    })
</script>
</html>
