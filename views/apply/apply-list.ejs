<script>
    var table;
    layui.use(['table', 'form'], function () {
        table = layui.table;
        const form = layui.form;
        $.ajax({
            url: "car/select",
            method: "get",
            success(res) {
                if (res.code === 200) {
                    let $html = "";
                    for (const car of res.data) {
                        $html += '<option value="' + car.id + '">' + car.car_no + '</option>';
                    }
                    $("#car_id option:first").after($html);
                    form.render()
                }
            }
        })

        $.ajax({
            url: "userinfo/driver/select",
            method: "get",
            success(res) {
                if (res.code === 200) {
                    let $html = "";
                    for (const user of res.data) {
                        $html += '<option value="' + user.id + '">' + user.nickname + '</option>';
                    }
                    $("#driver_id option:first").after($html);
                    form.render()
                }
            }
        })

        $.ajax({
            url: "userinfo/apply/select",
            method: "get",
            success(res) {
                if (res.code === 200) {
                    let $html = "";
                    for (const user of res.data) {
                        $html += '<option value="' + user.id + '">' + user.nickname + '</option>';
                    }
                    $("#apply_id option:first").after($html);
                    form.render()
                }
            }
        })

        table.render({
            elem: "#dataList",
            url: "apply/page",
            cols: [[
                {title: "编号", field: "id"},
                {title: "申请人", field: "apply_name"},
                {title: "申请车辆", field: "car_no"},
                {
                    title: "申请司机", field: "is_driver", templet: function (d) {
                        if (d.is_driver === 1) {
                            return d.apply_name + "(自驾)";
                        } else {
                            return d.driver_name;
                        }
                    }
                },
                {title: "实际车辆", field: "z_car_no"},
                {title: "实际司机", field: "z_driver_name"},
                {title: "状态", field: "exam_status", templet: "#statusTemp"},
                {title: "操作", fixed: "right", templet: "#optTemp"}
            ]],
            toolbar: true,
            page: true,
            limit: 5,
            limits: [5, 10, 20, 50, 100]
        });
        table.on("tool(dataList)", function (obj) {
            const {data: {id, car_id, driver_id}, event} = obj;
            if (event === "delete") {
                layer.confirm("确定取消编号[" + id + "]的申请吗?", {icon: 3}, function (index) {
                    $.ajax({
                        url: "apply/delete/" + id,
                        type: "delete",
                        dataType: "json",
                        success(res) {
                            if (res.code === 200) {
                                layer.msg("取消完成", {icon: 6});
                            } else {
                                layer.alert(res.msg, {icon: 5});
                            }
                            table.reload('dataList');
                        }
                    })
                    layer.close(index);
                })
            } else if (event === "back") {
                layer.confirm("确定归还车辆?", {icon: 3}, function (index) {
                    $.ajax({
                        url: "apply/back/" + id,
                        type: "post",
                        dataType: "json",
                        success(res) {
                            if (res.code === 200) {
                                layer.msg("还车完成", {icon: 6});
                            } else {
                                layer.alert(res.msg, {icon: 5});
                            }
                            table.reload('dataList');
                        }
                    })
                    layer.close(index);
                })
            } else {
                xadmin.open('记录信息', 'apply/edit?type=' + event + '&id=' + id);
            }
        });

        form.on("submit(search)", function (data) {
            table.reload("dataList", {
                where: data.field,
                page: {
                    curr: 1
                }
            })
            return false;
        });
    });
</script>
